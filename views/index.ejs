<% include ./head %>
  <body>   
    <% include ./nav %>
    <div class="am-modal am-modal-confirm" tabindex="-1" id="my-confirm" style="z-index: 100001">
      <div class="am-modal-dialog">
        <div class="am-modal-hd">温习提示</div>
        <div class="am-modal-bd">
          你，确定要删除这条数据吗？
        </div>
        <div class="am-modal-footer">
          <span class="am-modal-btn" data-am-modal-cancel>取消</span>
          <span class="am-modal-btn" data-am-modal-confirm>确定</span>
        </div>
      </div>
    </div>     
    <div id="app" class="am-g am-g-fixed">
      <% include ./breadcrumb %>
      <div id="listPenal"></div>
      <script id="listTpl" type="text/html">
        {{if list.length == 0}}
        <div class="am-panel am-panel-default">
            <div class="am-panel-bd">暂无数据,快快去添加吧</div>
        </div>
        {{else}}
        <table class="am-table am-table-radius am-table-striped am-table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>标题</th>
                    <th>类型</th>
                    <th>时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                {{each list value i}}
                <tr data-id="{{value.id}}">
                    <td>{{value.id}}</td>
                    <td>{{value.title}}</td>
                    <td>{{value.type}}</td>
                    <td>{{value.date}}</td>
                    <td>
                      <a href="/updata/{{value.id}}" class="am-btn am-btn-primary am-btn-xs am-round" id="delect-btn">编辑</a> 
                      <button class="am-btn am-btn-danger am-btn-xs am-round delect-btn" data-id="{{value.id}}">删除</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table> 
        {{/if}}
      </script>
      <a href="/add" type="button" class="am-btn am-btn-secondary am-round">增加</a>   
    </div>
    <script src="/js/template-web.js"></script>
    <script>
    (function () {

      //var $delectBtn = $(".delect-btn");
      var data = {
          list: ''
      };

      function main() {
        //todo 实现整个项目的入口函数
        ReaderBaseFrame();
        EventHanlder();
      }

      function getData(){
        //请求数据
        $.AMUI.progress.start();
        //打开页面渲染数据
        $.ajax({
          url: '/api/code'
        })
        .done(function(res) {
          $.AMUI.progress.done();
          data.list = res;
          RenderPage() //请求成功渲染页面  

        })
        .fail(function(res) {
          $.AMUI.progress.done();
          $.amAlert.toast({
            content:'请求出错了...',
            theme:'danger'
          })
        })

      }

      function RenderPage(){
        //渲染页面
        var listTpl = template('listTpl', data);  //定义js模板
        $("#listPenal").html(listTpl);  //渲染页面
        $(".delect-btn").click(function(event) {
           var id = $(this).data("id");
           del(id)
        });
      }

      function ReaderBaseFrame() {
        //todo 渲染基本的UI结构

        getData();
      }

      function del(id){

        $('#my-confirm').modal({
          relatedTarget: this,
          onConfirm: function(options) {
            //删除数据
            $.AMUI.progress.start();
            $.ajax({
              url: '/api/code/'+id,
              type: 'delete',
            })
            .done(function(res) {
              $.AMUI.progress.done();
              $.amAlert.toast({
                content:'删除成功'
              })
              $("tr[data-id='"+id+"']").remove();
            })
            .fail(function(res) {
              $.AMUI.progress.done();
              $.amAlert.toast({
                content:'请求出错了...',
                theme:'danger'
              })
            })
          },
          // closeOnConfirm: false,
          onCancel: function() {
            
          }
        });
        
      }

      function EventHanlder() {
        //todo 交互的事件绑定

       
      } 
      main();      
    
    })()   
    </script>
  </body>
</html>